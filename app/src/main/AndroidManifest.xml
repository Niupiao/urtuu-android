<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ohjoseph.com.urtuu" >

    <uses-sdk android:minSdkVersion="14" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShopScreen.ItemListActivity"
            android:label="@string/title_activity_item_list"
            android:parentActivityName=".Main.MainActivity"
            android:theme="@style/noAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ohjoseph.com.urtuu.Main.MainActivity" />
        </activity>
        <activity
            android:name=".ShopScreen.ItemViewPagerActivity"
            android:parentActivityName=".ShopScreen.ItemListActivity" />
    </application>

</manifest>
