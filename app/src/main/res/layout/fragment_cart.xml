<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="ohjoseph.com.urtuu.ShopScreen.CartFragment">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/cart"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/x_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_cancel"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/x_icon"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc"/>

    <ListView
        android:id="@+id/cart_items_list"
        android:layout_below="@id/divider"
        android:layout_above="@+id/checkout_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/checkout_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/light_blue"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/number_items"
                android:text="3 Items"
                android:textColor="#DD000000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/items_price"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="$299.99"
                android:textSize="20sp"
                android:textColor="@color/primary_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/button_1"
                    android:background="#bcbcbc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/button_2"
                    android:background="#bcbcbc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
