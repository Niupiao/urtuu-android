<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="ohjoseph.com.urtuu.ShopScreen.CartFragment">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/cart"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/x_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_cancel"
            android:clickable="true"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/x_icon"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc"/>

    <ListView
        android:id="@+id/cart_items_list"
        android:layout_below="@id/divider"
        android:layout_above="@+id/checkout_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/checkout_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="97dp">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/light_blue"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/number_items"
                android:text="1 Item"
                android:textColor="#DD000000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/items_price"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="$299.99"
                android:textSize="20sp"
                android:textColor="@color/primary_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:background="#FF9800"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/pay_with"
                        android:text="Pay with"
                        android:textSize="12dp"
                        android:textColor="@android:color/black"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/button_1"
                        android:layout_toRightOf="@id/pay_with"
                        android:src="@drawable/paypal"
                        android:scaleType="centerCrop"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:background="#FF9800"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/button_2"
                    android:layout_margin="1dp"
                    android:text="CHECKOUT"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/selector_checkout"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
