<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="ohjoseph.com.urtuu.MyAccount.Payments.MyPaymentsActivity">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="Update Payment Method"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/x_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_transparent_grey"
            android:clickable="true"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/x_icon"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_et"
        android:layout_below="@id/divider"
        android:editable="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_number_et"
        android:layout_below="@id/type_et"
        android:hint="Card Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvv_et"
        android:layout_below="@id/card_number_et"
        android:hint="CVV"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_holder_et"
        android:layout_below="@id/cvv_et"
        android:hint="Card Holder"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exp_month_et"
        android:layout_below="@id/card_holder_et"
        android:hint="Expiration Month"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exp_year_et"
        android:layout_below="@id/exp_month_et"
        android:hint="Expiration Year"/>
    <Button
        android:id="@+id/accept_button"
        android:background="@drawable/selector_white_grey"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/exp_year_et"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/accept">
    </Button>


</RelativeLayout>
